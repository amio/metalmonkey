{
  "name": "Metalmonkey",
  "version": "0.1.0",
  "description": "Modern userscripts manager.",
  "main": "index.js",
  "scripts": {
    "prepare-assets": "rimraf dist && cp -r app dist",
    "prebuild": "npm run prepare-assets",
    "predev": "npm run prepare-assets",
    "build": "microbundle -i app/**/*.js -o dist -f cjs --jsx React.createElement",
    "dev": "microbundle watch -i app/**/*.js -o dist -f cjs --jsx React.createElement"
  },
  "author": "Amio <amio.cn@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "webextension-polyfill": "^0.2.1"
  },
  "devDependencies": {
    "microbundle": "^0.4.4",
    "rimraf": "^2.6.2"
  }
}
